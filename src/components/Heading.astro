---
import { type HTMLAttributes } from "astro/types";

const tags = {
  h1: 'h1',
  h2: 'h2',
  h3: 'h3',
  h4: 'h4',
  h5: 'h5',
  h6: 'h6',
}

const sizes = {
  display: "fs-display",
  xxl: "fs-xxl;",
  xl: "fs-xl",
  l: "fs-l",
  m: "fs-m",
  s: "fs-s",
  xs: "fs-xs",
};

const fontFamilies = {
    primary: "ff-primary",
    secondary: "ff-secondary",
};

const marginBottoms = {
  xl: "mb-xl",
  l: "mb-l",
  m: "mb-m",
  s: "mb-s",
  xs: "mb-xs",
  none: "mb-none",
};

interface Props extends HTMLAttributes<keyof typeof tags> {
  tag: keyof typeof tags;
  size: keyof typeof sizes;
  fontFamily: keyof typeof fontFamilies;
  marginBottom: keyof typeof marginBottoms;
}

const { tag, size, fontFamily, marginBottom, ...rest } = Astro.props;
const CustomTag = tag;
---

<CustomTag class:list={["default", sizes[size], fontFamilies[fontFamily], marginBottoms[marginBottom]]} {...rest}>
  <slot />
</CustomTag>

<style>
  .default {
    line-height: 1.1;
    text-wrap: balance;
    text-transform: capitalize;
  }

/* Sizes */
  .fs-display {
    font-size: var(--_typography---font-size--display);
  }
  .fs-xxl {
  font-size: var(--_typography---font-size--h1);
  }
  .fs-xl {
    font-size: var(--_typography---font-size--h2);
  }
  .fs-l {
    font-size: var(--_typography---font-size--h3);
  }
  .fs-m {
    font-size: var(--_typography---font-size--h4);
  }
  .fs-s {
    font-size: var(--_typography---font-size--h5);
  }
  .fs-xs {
    font-size: var(--_typography---font-size--h6);
  }

  /* Familes */
  .ff-primary {
    font-family: var(--primary-family);
    font-weight: 400;
  }
  .ff-secondary {
    font-family: var(--secondary-family);
  }

  /* Margin Bottom */
  .mb-xl {
    margin-bottom: 2rem;
  }
  .mb-l {
    margin-bottom: 1.5rem;
  }
  .mb-m {
    margin-bottom: 1rem;
  }
  .mb-s {
    margin-bottom: .5rem;
  }
  .mb-xs {
    margin-bottom: .25rem;
  }
  .mb-none {
    margin-bottom: 0;
  }



