---
// Content
import Picture from "astro/components/Picture.astro";
import type { CollectionEntry } from "astro:content";
import Heading from "./Heading.astro";
import Image from "astro/components/Image.astro";

type Props = {
    popularProducts: CollectionEntry<"popularProducts">
};

const {popularProducts} = Astro.props;

const {itemCategory, id, itemDescription, itemImage, itemNumber, itemPrice, itemQuality, itemURL} = popularProducts.data;
---

<article class="productCard">
    <div class="productCard__img-wrapper">
        <Image src={itemImage} alt={itemDescription} class="productCard__img" loading="lazy" width={300} height={300} />
        <p class="quality">{itemQuality}</p>
    </div>
    <div class="productCard__content">
        <Heading tag="h3" size="s" fontFamily="primary" marginBottom="none">{itemDescription}</Heading>
        <p>Item Number: {itemNumber}</p>
        <p>Category: {itemCategory}</p>
        <p>Price: ${itemPrice.toFixed(2)}</p>
        <a href={itemURL} class="btn btn-secondary">View Product</a>
    </div>
</article>

<style lang="scss">
.productCard {
    background: #fff;
    border-radius: 16px;
    overflow: hidden;
    padding: .5rem;
    text-align: left;
    display: flex;
    flex-direction: column;
    gap: 1rem;

    &__img-wrapper {
        position: relative;
    }

    .quality {
        position: absolute;
        bottom: 0;
        background: #fff;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.4);
        padding: .5rem .75rem .3rem .75rem;
        border-radius: 1000px;
        margin-bottom: 0;
        left: .5rem;
        bottom: .5rem;
        text-transform: uppercase;
        font-weight: 700;
        letter-spacing: 2px;
        font-size: .8rem;
        font-family: 'Hamburg';
        line-height: 1;
    }
}
</style>