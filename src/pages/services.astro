<style lang="scss">
#work-with-us {
    .card {
        background-color: var(--light-100);
        border-radius: var(--border-radius-medium);
        padding: 1.5rem 1.5rem .5rem;
        text-wrap: balance;
        text-align: left;

        h3 {
            font-size: 1.5rem;
        }
    }

    .grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(341px, 1fr));
        grid-gap: 1rem;
    }
}


.split {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 4rem;

    &__col {
        display: flex;
        flex-direction: column;
        justify-content: center;
        height: 100%;

        .img-wrapper {
            height: 100%;
            border-radius: var(--border-radius-medium);
            overflow: hidden;
            width: 100%;
        }
    }
    
    &__content {
        text-align: left;
        padding: 3rem 0;

        h4 {
            margin-bottom: .25rem;
            line-height: 1;
            font-size: 1.1rem;
            font-weight: 500;
        }
    }
}

.bg-dark {
    .content-md {
        h1, h2, h3, h4, h5, h6, p {
            color: var(--light-100);
        }
    }
}

.blog-card__wrapper {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr 1fr;
    grid-gap: 1rem;
}

.blog-card {
    border: 1px solid;
    border-radius: 16px;
    overflow: hidden;

    &:hover {
        background: #1a1a1a;
    }

    .img-wrapper {
        // border-radius: 16px;
        overflow: hidden;
        margin-bottom: 1rem;
    }

    &__content {
        text-align: left;
        color: #fff;
        padding: 1rem;

        h4 {
            margin-bottom: .25rem;
        }

        p {
            color: #fff;
            font-size: .9rem;
        }        
    }
}

.list {
    border-left: 2px solid;
    padding: 0rem 1rem;
    margin-left: 1rem;

    li:last-child {
        p {
            margin-bottom: 0;
        }
    }
}

#garments {
    .blog-card {
        border: 1px solid var(--dark-900--transparency);

        &:hover {
            background-color: var(--light-200--transparency)
        }
        &__content {
            color: var(--dark-900);

            p {
                color: var(--dark-900);
            }
        }
    }
}
</style>