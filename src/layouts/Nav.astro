---
import { Image } from 'astro:assets';
import Links from '@/components/Links.astro';
import navLogo from '@/assets/navLogo.svg';
import wordmark from '@/assets/wordmark.png';

import { navData } from '@/data/navData';
---


<!--=============== HEADER ===============-->
<header class="nav">
  <div class="nav__container">
    <div class="nav__logo">
      <a href="/" class="nav__logo-img">
        <Image src={wordmark} alt="beyond belief studio" />
      </a>
      <a href="/" class="nav__logo-img__sticky">
        <Image src={navLogo} alt="beyond belief studio" />
      </a>
    </div>

    <nav class="nav__links">
        {navData.map((i) => {
            return <Links variant="nav-link" href={i.href}>{i.title}</Links>
        })}
        <Links variant="secondary" href={"/"}>Get Started</Links>
    </nav>

    <!-- Hamburger -->
    <button class="hamburger" id="hamburgerBtn" aria-label="Toggle Menu">
      <div class="circle"></div>
      <span class="line top"></span>
      <span class="line middle"></span>
      <span class="line bottom"></span>
    </button>
  </div>

  <!-- Mobile Menu -->
  <div class="nav__mobile" id="mobileNav">
        {navData.map((i) => {
            return <a class="nav-link" href={i.href}>{i.title}</a>
        })}
  </div>
</header>




<style lang="scss">
/* Header Styles */
.nav {
  position: fixed;
  top: 0;
  width: 100%;
  z-index: 1000;
  
  &__container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: var(--container--main--lg);
    background-color: var(--light-200);
    backdrop-filter: blur(0.35rem);
    padding: 1rem;
    border-radius: var(--border-radius-small);
    margin: 2rem auto;
    width: 100%;
    gap: 2rem;
    position: relative;
    z-index: 10;
  }

  &__logo-img {
    display: block;
    height: 100%;

    img {
      max-height: 90px;
    }
  }
  
  &__logo-img__sticky {
    display: none;
    height: 100%;
  
    img {
      max-height: 60px;
    }
  }
  
  &__links {
    display: flex;
    align-items: center;
    gap: 2rem;
  }

  &.scrolled {
    .nav__logo-img {
        display: none;
    }

    .nav__logo-img__sticky {
        display: block;
    }

    .nav__container {
        background-color: #f5eee9d1;
        width: fit-content;
        padding: 0.5rem .5rem .5rem 1.5rem;
        box-shadow: 0px 0px 13px #00000029;
    }
  }

  /* Mobile Nav */
  &__mobile {
    display: none;
    position: fixed;
    top: 0;
    right: 0;
    background: var(--light-200);
    width: 100%;
    height: 100vh;
    padding: 6rem 2rem 2rem;
    flex-direction: column;
    gap: 2rem;
    align-items: center;
    justify-content: center;
    z-index: 1;
    transform: translateY(100%);
    
  }

  &__mobile a {
    color: var(--dark-900);
    font-size: 1.5rem;
    text-decoration: none;
  }

  /* Open State */
  &__mobile.open {
    transform: translateY(0);
    display: flex !important;
  }
}

/* Hamburger Button */
.hamburger {
  position: relative;
  width: 48px;
  height: 48px;
  border: none;
  background: none;
  cursor: pointer;
  display: none;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.circle {
  position: absolute;
  width: 48px;
  height: 48px;
  background-color: var(--brand-primary); /* Customize */
  border-radius: 50%;
  z-index: -1;
  transform: scale(1);
  transition: background-color 0.3s ease;
}

.line {
  position: absolute;
  width: 24px;
  height: 3px;
  background-color: var(--dark-900);
  border-radius: 2px;
  transition: background-color 0.3s ease;
}

.line.top {
  top: 14px;
}

.line.middle {
  top: 22px;
}

.line.bottom {
  top: 30px;
}

body.menu-open {
  overflow: hidden;
}

/* Responsive Behavior */
@media (max-width: 1010px) {
.nav {
  &__container {
    margin: 1rem auto;
  }

  &__logo-img {
    img {
      max-height: 70px;
    }
  }
  
  &__links {
    display: none;
  }
}

.hamburger {
  display: flex;
}
}


</style>

<script>
import gsap from "gsap";

// NAV
const hamburgerBtn = document.getElementById("hamburgerBtn") as HTMLElement;
const mobileNav = document.getElementById("mobileNav") as HTMLElement;
const topLine = document.querySelector('.line.top');
const middleLine = document.querySelector('.line.middle');
const bottomLine = document.querySelector('.line.bottom');
const circle = document.querySelector('.circle');
let isOpen = false;

const tl = gsap.timeline({ paused: true });

function hideNav(): void {
  gsap.set(mobileNav, { display: 'none' });
}

tl.to(middleLine, {
  duration: 0.2,
  opacity: 0,
  ease: 'power1.inOut'
}, 0)
.to(topLine, {
  duration: 0.3,
  rotate: 45,
  y: 8,
  ease: 'power2.inOut'
}, 0)
.to(bottomLine, {
  duration: 0.3,
  rotate: -45,
  y: -8,
  ease: 'power2.inOut'
}, 0)
.to(circle, {
  duration: 0.3,
  scale: 1.15,
  ease: 'power2.inOut'
}, 0);

hamburgerBtn.classList.remove("open");

hamburgerBtn.addEventListener("click", () => {
  mobileNav.classList.toggle("open");
  document.body.classList.toggle("menu-open");
  hamburgerBtn.classList.toggle("open");

  if (!isOpen) {
    // Reveal and animate in
    gsap.set(mobileNav, { display: 'flex', y: '-100%' });
    gsap.to(mobileNav, { duration: 0.5, y: '0%', ease: 'power2.out' });
    isOpen = true;
    tl.play();
  } else {
    // Animate out and hide
    gsap.to(mobileNav, {
      duration: 0.4,
      y: '-100%',
      ease: 'power2.in',
      onComplete: hideNav
    });
    tl.reverse();
    isOpen = false;
  }
});




window.addEventListener("scroll", () => {
  const header = document.querySelector(".nav") as HTMLElement;
  if (window.scrollY > 50) {
    header.classList.add("scrolled");
  } else {
    header.classList.remove("scrolled");
  }
});

// Get all nav links
const navLinks = document.querySelectorAll('nav a'); // Adjust selector to your actual nav links

navLinks.forEach(link => {
  // Check if the href matches the current page
  if (link.getAttribute('href') === window.location.pathname) {
    link.classList.add('active');
  }
});
</script>

