---
import { Image } from 'astro:assets';
import Links from '@/components/Links.astro';
import navLogo from '@/assets/navLogo.svg';
import wordmark from '@/assets/wordmark.png';

import { navData } from '@/data/navData';
---


<!--=============== HEADER ===============-->
<header class="nav">
  <div class="nav__container">
    <div class="nav__logo">
      <a href="/" class="nav__logo-img">
        <Image src={wordmark} alt="beyond belief studio" />
      </a>
      <a href="/" class="nav__logo-img__sticky">
        <Image src={navLogo} alt="beyond belief studio" />
      </a>
    </div>

    <nav class="nav__links">
        {navData.map((i) => {
            return <Links variant="nav-link" href={i.href}>{i.title}</Links>
        })}
        <Links variant="secondary" href={"/"}>Get Started</Links>
    </nav>

    <!-- Hamburger -->
    <button class="hamburger" id="hamburgerBtn" aria-label="Toggle Menu">
      <span></span><span></span><span></span>
    </button>
  </div>

  <!-- Mobile Menu -->
  <div class="nav__mobile" id="mobileNav">
        {navData.map((i) => {
            return <a class="nav-link" href="{i.href}">{i.title}</a>
        })}
  </div>
</header>




<style lang="scss">
/* Header Styles */
.nav {
  position: fixed;
  top: 0;
  width: 100%;
  z-index: 1000;
  
  &__container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: var(--container--main);
    margin: 0 auto;
    background-color: var(--light-200);
    backdrop-filter: blur(0.35rem);
    padding: 1rem;
    border-radius: var(--border-radius-small);
    margin: 2rem auto;
    width: 100%;
    gap: 2rem;
  }
  
  &__logo img {
    max-height: 90px;
  }
  
  &__logo-img__sticky {
    display: none;
  
    img {
      max-height: 60px;
    }
  }
  
  &__links {
    display: flex;
    align-items: center;
    gap: 2rem;
  }

  /* Mobile Nav */
  &__mobile {
    display: none;
    position: fixed;
    top: 0;
    right: 0;
    background: #0d0d0d;
    width: 100%;
    height: 100vh;
    padding: 6rem 2rem 2rem;
    flex-direction: column;
    gap: 2rem;
    align-items: center;
    justify-content: center;
    z-index: 1050;
    transform: translateX(100%);
    transition: transform 0.3s ease;
  }

  &__mobile a {
    color: white;
    font-size: 1.5rem;
    text-decoration: none;
  }

  /* Open State */
  &__nav.open {
    display: flex;
    transform: translateX(0);
  }

  &.scrolled {
    .nav__logo-img {
        display: none;
    }

    .nav__logo-img__sticky {
        display: block;
    }

    .nav__container {
        background-color: #f5eee9d1;
        width: fit-content;
        padding: 0.5rem .5rem .5rem 1.5rem;
        box-shadow: 0px 0px 13px #00000029;
    }
  }
}

/* Hamburger Button */
.hamburger {
  display: none;
  flex-direction: column;
  gap: 5px;
  background: none;
  border: none;
  cursor: pointer;
  padding: 0;
  z-index: 1100;
}

.hamburger span {
  display: block;
  width: 25px;
  height: 2px;
  background: white;
  transition: all 0.3s ease;
}

body.menu-open {
  overflow: hidden;
}

/* Responsive Behavior */
@media (max-width: 768px) {
  .nav__links {
    display: none;
  }

  .hamburger {
    display: flex;
  }
}

.hamburger.open span:nth-child(1) {
  transform: rotate(45deg) translateY(8px);
}

.hamburger.open span:nth-child(2) {
  opacity: 0;
}

.hamburger.open span:nth-child(3) {
  transform: rotate(-45deg) translateY(-8px);
}

</style>

<script>
// NAV
const hamburgerBtn = document.getElementById("hamburgerBtn") as HTMLElement;
const mobileNav = document.getElementById("mobileNav") as HTMLElement;

hamburgerBtn.addEventListener("click", () => {
  mobileNav.classList.toggle("open");
  document.body.classList.toggle("menu-open");
});

hamburgerBtn.classList.toggle("open");

window.addEventListener("scroll", () => {
  const header = document.querySelector(".nav") as HTMLElement;
  if (window.scrollY > 50) {
    header.classList.add("scrolled");
  } else {
    header.classList.remove("scrolled");
  }
});
</script>

